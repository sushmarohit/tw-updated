// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  companyName  String?  @map("company_name")
  role         String?
  phone        String?
  companySize  String?  @map("company_size")
  industry     String?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  assessmentSessions AssessmentSession[]
  hubspotSyncs       HubSpotSync[]

  @@map("users")
}

model AssessmentSession {
  id           String   @id @default(uuid())
  userId       String?  @map("user_id")
  calculatorType String @map("calculator_type") // operational_health, cost_leakage, etc.
  startedAt    DateTime @default(now()) @map("started_at")
  completedAt  DateTime? @map("completed_at")
  status       String   @default("in_progress") // in_progress, completed, abandoned
  overallScore Decimal? @map("overall_score") @db.Decimal(5, 2)
  reportUrl    String?  @map("report_url")
  sessionData  Json?    @map("session_data") // stores intermediate calculation state
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user         User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userResponses UserResponse[]
  indexScores  IndexScore[]
  pdfReports   PDFReport[]
  hubspotSyncs HubSpotSync[]

  @@index([userId])
  @@index([status])
  @@map("assessment_sessions")
}

model Question {
  id            String   @id @default(uuid())
  calculatorType String @map("calculator_type")
  text          String
  g2pIndex      String? @map("g2p_index") // PAR, AQ, CLS, LV, MTTAR
  sequenceOrder Int     @map("sequence_order")
  questionType  String  @default("multiple_choice") @map("question_type")
  createdAt     DateTime @default(now()) @map("created_at")

  answerOptions AnswerOption[]
  userResponses UserResponse[]

  @@map("questions")
}

model AnswerOption {
  id         String   @id @default(uuid())
  questionId String   @map("question_id")
  text       String
  scoreValue Int      @map("score_value")
  weight     Decimal  @default(1.0) @db.Decimal(3, 2)
  createdAt  DateTime @default(now()) @map("created_at")

  question       Question        @relation(fields: [questionId], references: [id], onDelete: Cascade)
  userResponses  UserResponse[]

  @@map("answer_options")
}

model UserResponse {
  id        String   @id @default(uuid())
  sessionId String   @map("session_id")
  questionId String  @map("question_id")
  answerId  String?  @map("answer_id")
  score     Decimal  @map("score") @db.Decimal(5, 2)
  createdAt DateTime @default(now()) @map("created_at")

  session      AssessmentSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  question     Question          @relation(fields: [questionId], references: [id])
  answerOption AnswerOption?     @relation(fields: [answerId], references: [id])

  @@index([sessionId])
  @@map("user_responses")
}

model IndexScore {
  id            String   @id @default(uuid())
  sessionId     String   @map("session_id")
  g2pIndex      String   @map("g2p_index") // PAR, AQ, CLS, LV, MTTAR
  score         Decimal  @map("score") @db.Decimal(5, 2)
  classification String? @map("classification") // Excellent, Good, Needs Improvement, Critical
  createdAt     DateTime @default(now()) @map("created_at")

  session       AssessmentSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@map("index_scores")
}

model Recommendation {
  id            String   @id @default(uuid())
  g2pIndex      String   @map("g2p_index")
  classification String  @map("classification")
  methodology   String?  @map("methodology")
  text          String
  priority      Int?
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("recommendations")
}

model BenchmarkData {
  id            String   @id @default(uuid())
  g2pIndex      String   @map("g2p_index")
  industrySector String? @map("industry_sector")
  companySize   String?  @map("company_size")
  averageScore  Decimal  @map("average_score") @db.Decimal(5, 2)
  percentile25  Decimal? @map("percentile_25") @db.Decimal(5, 2)
  percentile50  Decimal? @map("percentile_50") @db.Decimal(5, 2)
  percentile75  Decimal? @map("percentile_75") @db.Decimal(5, 2)
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("benchmark_data")
}

model HubSpotSync {
  id              String   @id @default(uuid())
  userId          String?  @map("user_id")
  sessionId       String?  @map("session_id")
  hubspotContactId String? @map("hubspot_contact_id")
  syncStatus      String   @default("pending") @map("sync_status") // pending, synced, failed
  syncedAt        DateTime? @map("synced_at")
  errorMessage    String?  @map("error_message")
  createdAt       DateTime @default(now()) @map("created_at")

  user            User?            @relation(fields: [userId], references: [id])
  session        AssessmentSession? @relation(fields: [sessionId], references: [id])

  @@index([syncStatus])
  @@map("hubspot_syncs")
}

model PDFReport {
  id          String   @id @default(uuid())
  sessionId   String   @map("session_id")
  reportType  String?  @map("report_type") // full_report, summary, recommendations
  s3Url       String   @map("s3_url")
  generatedAt DateTime @default(now()) @map("generated_at")
  viewedAt    DateTime? @map("viewed_at")
  createdAt   DateTime @default(now()) @map("created_at")

  session     AssessmentSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("pdf_reports")
}

